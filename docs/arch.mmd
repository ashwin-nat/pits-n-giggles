flowchart TB

%% ---------------------------------------------------------------------------
%% External Systems (Top)
%% ---------------------------------------------------------------------------
subgraph EXTERNAL["   External Systems   "]
    direction LR
    F1_SIM["  F1 Simulator"]
    EXT_TGT["  External Targets"]
end

%% ---------------------------------------------------------------------------
%% Launcher and Process Manager
%% ---------------------------------------------------------------------------
subgraph PNG_LAUNCHER["   Pits n' Giggles   "]
    direction TB

    %% -------------------------------------------------------------------------
    %% Process Manager (Horizontal on top)
    %% -------------------------------------------------------------------------
    subgraph PROC_MGR["   Process Manager   "]
        direction LR
        CORE_PROG_MGR["  Core  "]
        PITWALL_PROC_MGR["  PitWall  "]
        HUD_PROC_MGR["  HUD  "]
        SAVE_VIEWER_PROC_MGR["  Save Viewer  "]
    end

    %% -------------------------------------------------------------------------
    %% Core (Left side)
    %% -------------------------------------------------------------------------
    subgraph CORE["   Telemetry Core   "]
        direction TB
        subgraph TELEMETRY["   Telemetry Layer   "]
            direction TB
            UDP_RECV["  UDP Receiver  "]
            PARSERS["  Parsers  "]
            PACKET_FWD["  Packet Forwarder  "]
        end

        subgraph STATE["   State Management Layer   "]
            direction TB
            COMP_ENGINE["  Computation Engine  "]
            SHARED_STATE["  Shared State  "]
            API_INTF["  State Interface  "]
        end

        subgraph INTF["   Interface Layer   "]
            direction TB
            HTTP["  HTTP Server  "]
            SOCKETIO["  Socket.IO  "]
            IPC["  ZMQ IPC Server  "]
            ZMQ_PUB["  ZMQ Publisher  "]
        end
    end

    %% -------------------------------------------------------------------------
    %% PitWall Broker (Center)
    %% -------------------------------------------------------------------------
    subgraph PITWALL["   PitWall Broker   "]
        direction TB
        ZMQ_PROXY["  ZMQ Proxy  "]
    end

    %% -------------------------------------------------------------------------
    %% HUD Subsystem (Right side)
    %% -------------------------------------------------------------------------
    subgraph HUD["   HUD Subsystem   "]
        direction TB
        subgraph HUD_INPUT["   Input Layer   "]
            direction TB
            HUD_IPC["  IPC Server  "]
            HUD_SUB["  ZMQ Subscriber  "]
        end
        HUD_QT["  Qt Overlays  "]
    end

    %% -------------------------------------------------------------------------
    %% Save Viewer Subsystem (Bottom)
    %% -------------------------------------------------------------------------
    subgraph SAVE_VIEWER["   Save Viewer Subsystem   "]
        direction LR
        SV_IPC["  IPC Server  "]
        SV_STATE["  State  "]
        SV_HTTP["  HTTP Server  "]
        SV_SOCKETIO["  Socket.IO Server  "]
    end
end

%% ---------------------------------------------------------------------------
%% UI Clients (Bottom)
%% ---------------------------------------------------------------------------
subgraph UI_CLIENTS["   Web Clients   "]
    direction LR
    STREAM_OVERLAY["  Stream Overlay  "]
    DRV_VIEW["  Driver Dashboard  "]
    ENG_VIEW["  Engineer Dashboard  "]
end

%% ---------------------------------------------------------------------------
%% Connections - Telemetry Flow (Top to Core)
%% ---------------------------------------------------------------------------
F1_SIM -->|"Telemetry Data"| UDP_RECV
UDP_RECV --> PARSERS
UDP_RECV --> PACKET_FWD
PACKET_FWD --> EXT_TGT
PARSERS --> COMP_ENGINE
COMP_ENGINE --> SHARED_STATE

%% ---------------------------------------------------------------------------
%% Connections - Core Internal (Vertical flow)
%% ---------------------------------------------------------------------------
SHARED_STATE --> API_INTF
API_INTF --> HTTP
API_INTF --> SOCKETIO
API_INTF --> ZMQ_PUB

%% ---------------------------------------------------------------------------
%% Connections - Process Management (Clean vertical lines)
%% ---------------------------------------------------------------------------
CORE_PROG_MGR --> IPC
PITWALL_PROC_MGR --> ZMQ_PROXY
HUD_PROC_MGR --> HUD_IPC
SAVE_VIEWER_PROC_MGR --> SV_IPC

%% ---------------------------------------------------------------------------
%% Connections - ZMQ Pub/Sub Flow (Left to Right: Core -> PitWall -> HUD)
%% ---------------------------------------------------------------------------
ZMQ_PUB --> ZMQ_PROXY
ZMQ_PROXY --> HUD_SUB
HUD_SUB --> HUD_QT

%% ---------------------------------------------------------------------------
%% Connections - HUD Control
%% ---------------------------------------------------------------------------
HUD_IPC --> HUD_QT

%% ---------------------------------------------------------------------------
%% Connections - UI Clients (Clean lines from bottom)
%% ---------------------------------------------------------------------------
HTTP --> UI_CLIENTS
SOCKETIO --> STREAM_OVERLAY
SOCKETIO --> DRV_VIEW
SOCKETIO --> ENG_VIEW

%% ---------------------------------------------------------------------------
%% Connections - Save Viewer (Clean lines from bottom)
%% ---------------------------------------------------------------------------
SV_HTTP --> UI_CLIENTS
SV_SOCKETIO --> DRV_VIEW
SV_IPC --> SV_STATE
SV_STATE --> SV_SOCKETIO

